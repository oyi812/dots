#!/bin/bash
# (re)initialise my dot files
# usage: $ ~/my/dots/init

set -e

mkdir -p ~/.config/nvim
mkdir -p ~/.config/alacritty

ln -sf ~/my/dots/bashrc ~/.bashrc
ln -sf ~/my/dots/bash_profile ~/.bash_profile
ln -sf ~/my/dots/init.vim ~/.config/nvim/init.vim
ln -sf ~/my/dots/alacritty.yml ~/.config/alacritty/alacritty.yml

# install vim plug for neovim if it doesn't exist
if [ ! -f ~/.local/share/nvim/site/autoload/plug.vim ]; then
	curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
	    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
fi
